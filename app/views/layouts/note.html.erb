<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= stylesheet_link_tag    'notes', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render 'shared/note_nav' %>

    <!-- start of note header -->
    <%= render 'shared/note_masthead' %>
    <!-- end of note header -->

    <div class="container">

      <div class="row">
        
        <%= yield %>

        <%= render 'shared/note_sidebar' %>
      </div>

        <!-- start of footer -->
        <%= render 'shared/note_footer'%>
        <!-- end of footer -->
    </div>
  </body>
</html>
