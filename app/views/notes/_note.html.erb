<div class="note-post">
  <h2 class="note-post-title"><%= link_to note.title.upcase, note %></h2>
  
  <p class="note-post-meta">
    Created <%= distance_of_time_in_words(note.created_at, Time.now) %> ago
  </p>
      
  <p class="note-post-meta">
    <% if current_user == note.user %>	
      <%= link_to 'Edit', edit_note_path(note) %> /
      <%= link_to 'Delete Note', note, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%end%>
  </p>

  <p>
    <%= note.body %>
  </p>
</div>
