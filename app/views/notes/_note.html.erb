<div class="note-post">
  <h2 class="note-post-title"><%= link_to note.title.upcase, note %></h2>
  <h5><%= note.user.name %></h5>
  <p class="note-post-meta">Created <%= distance_of_time_in_words(note.created_at, Time.now) %> ago</p>
  
  <%if note.user == current_user %>    
    <p class="note-post-meta">
    <%= link_to 'Show', note %> /	
    <%= link_to 'Edit', edit_note_path(note) %> /
    <%= link_to 'Delete Note', note, method: :delete, data: { confirm: 'Are you sure?' }  %>
    </p>
  <% end %>
  <p>
    <%= note.body %>
  </p>
</div>