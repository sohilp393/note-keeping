<div class="col-sm-8 blog-main">
  <h2><%= @note.title %></h2>
  <%= link_to 'Edit', edit_note_path(@note)  %>
  <p>
    <%= @note.body %>
  </p>
    
<% if @note.user == current_user %>
  <%= link_to 'Add User', new_role_path(:note => @note ),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'}  %>
  <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
      </div>
  </div>
<%end%></br></br>

<div class="row">
    <main role="main">
      <h2></h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
        <tr>
         <th>User</th>
         <th>Role</th>
         <th>Action</th> 
      </tr>
      <% @note.roles.each do |role| %>
        <tr>
          <td><%= role.user.name %></td>
          <td><%= role.role %></td>
          <td><%= link_to 'Delete Role', role, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
        </tr>
      <% end %>
        </table>
      </div>
    </main>
</div>
</div>
  